<h2>Завантажити нотатку</h2>
<form action="/notes/upload" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="noteFile">Виберіть файл (.txt):</label>
        <input type="file" id="noteFile" name="noteFile" accept=".txt" required>
    </div>
    <button type="submit">Завантажити</button>
</form>

<h2>Створити нотатку</h2>
<form action="/notes/create" method="POST">
    <div class="form-group">
        <label for="title">Назва нотатки:</label>
        <input type="text" id="title" name="title" placeholder="Назва нотатки" required>
    </div>
    <div class="form-group">
        <label for="content">Зміст нотатки:</label>
        <textarea id="content" name="content" placeholder="Зміст нотатки" required></textarea>
    </div>
    <button type="submit">Створити</button>
</form>

<h2>Список нотаток</h2>
<ul>
    {{#each notes}}
    <li>
        <strong>{{this.title}}</strong>: {{this.content}}
        <br>
        <form action="/notes/delete?_method=DELETE" method="POST" style="display:inline;">
            <input type="hidden" name="title" value="{{this.title}}">
            <button type="submit" class="delete-btn">Видалити</button>
        </form>

        <form action="/notes/edit" method="GET" style="display:inline;">
            <input type="hidden" name="title" value="{{this.title}}">
            <button type="submit">Редактировать</button>
        </form>

        <form action="/notes/download" method="GET" style="display:inline;">
            <input type="hidden" name="title" value="{{this.title}}">
            <button type="submit">Завантажити</button>
        </form>
    </li>
    {{/each}}
</ul>