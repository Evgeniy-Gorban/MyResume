<div class="form-container">
  <h1>Створіть блог</h1>
  <form class="blog-form" action="/blog/create" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Титул:</label>
      <input type="text" name="title" id="title" />
      {{#if errorMessage.title}}
      <p class="error-message">{{errorMessage.title}}</p>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="description">Опис:</label>
      <textarea name="description" id="description"></textarea>
      {{#if errorMessage.description}}
      <p class="error-message">{{errorMessage.description}}</p>
      {{/if}}
    </div>

    <div>
      <label for="blogImage">Фото блога:</label>
      <input type="file" name="blogImage" id="blogImage" accept="image/*" />
    </div>

    <button class="button button-primary" type="submit">Створити блог</button>
  </form>
</div>