<div class="form-container">
  <h1>Змінити блог</h1>
  <form action="/blog/edit/{{blog._id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class=" form-group">
      <label for="title">Титул:</label>
      <input type="text" name="title" id="title" value="{{blog.title}}" />
      {{#if errorMessage.title}}
      <p class="error-message">{{errorMessage.title}}</p>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="description">Опис:</label>
      <textarea name="description" id="description">{{blog.description}}</textarea>
      {{#if errorMessage.description}}
      <p class="error-message">{{errorMessage.description}}</p>
      {{/if}}
    </div>

    <div>
      <label for="blogImage">Фото блогу:</label>
      <input type="file" name="blogImage" id="blogImage" accept="image/*" />
    </div>

    <button class="button button-primary" type="submit">Змініти блог</button>
  </form>
</div>